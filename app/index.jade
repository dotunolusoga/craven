doctype html(lang='en-US')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title craVen
    link(rel='stylesheet', href='./vendor/foundation.css')
    link(rel='stylesheet', href='styles/normalize.css')
    link(rel='stylesheet', href='css/main.css')

body
    //if lt IE 9
      script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')

    .container.large-centered

      .row
        .headerContainer.large-10.columns
          img(src="http://i.imgur.com/g6ccn.jpg")

          h1 craVen
          .row
            .login.large-6.columns.large-centered
                h1 Check In
                form
                  input(type='text', name='username', placeholder='user', required='required')
                  input(type='password', name='password', placeholder='****' required='required')
                  button.register REGISTER
                  button.loginButton LOGIN

        .row
          .statusContainer.large-10.columns.hidden
            h1 Tsundoku Status
            #bookStatus
            button.addToShelf ADD BOOK
            button.shelf SEE FULL SHELF

        .row
          .addBookProfile.large-10.columns.hidden
            h1 Add New Book
            .row
              .bookCover.small-10.columns
                label(for="coverimage") Cover Art
                input(type="url" name="coverimage" placeholder="www.pictureurl.com")#coverUrl
              .imgUrl.small-2.columns
                button#coverImage +
              .appendedCoverArt
              
            .bookDetails
              label(for="title") Title
              input(type="text" name="title" placeholder="Game Of Thrones")#title
              label(for="author") Author
              input(type="text" name="author" placeholder="George R. R. Martin")#author
              label ADD TO APPROPRIATE SHELF
              button#beingRead BEING READ
              button#toRead TO READ
              button#toBuy TO BUY
            .row
              .doneButton.small-6.columns
                button#done DONE
              .resetButton.small-6.columns
                button#reset RESET


    script(src='vendor/jquery.min.js')
    script(src='vendor/lodash.min.js')
    script(src='vendor/firebase.js')
    script(src='js/main.js')
